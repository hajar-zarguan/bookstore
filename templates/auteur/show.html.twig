{% extends 'base.html.twig' %}

{% block title %}Auteur
{% endblock %}

{% block body %}

<div class="container">

  <!-- client section -->

  <section class="client_section layout_padding">
    <div class="container ">
      <div class="heading_container heading_center">
        <h2>
         Auteur 
        </h2>
        <hr>
      </div>


      <div class="row">				
        <div class="col-md-6 mx-auto">
          <div class="client_container ">
			  <div class="client_id">
				<div class="img-box">
				<img src="images/c1.jpg" alt="">
				</div>
				<div class="client_name">
				<h5>
					{{ auteur.id }} )
				</h5>
				<span>{{ auteur.nomPrenom }}</span>
					
				</h6>
				</div>
			  </div>
            <div class="detail-box">
              <p>

               -  {{ auteur.nomPrenom }} est né le {{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }} 
			<br>
			  -  Sa nationalité est {{ auteur.nationalite }}.
			   <br> <span >Parmi ses travaux :</span> <br>

			    {% for livre in auteur.livres %}
			  <div style="margin-left: 100px;"> + {{ livre }}<br></div>
				
			  {% endfor %}
			</p>
              <span>
                <i class="fa fa-quote-left" aria-hidden="true"></i>
              </span>
            </div>
          
          </div>
        </div>

        
      </div>
    </div>
  </section>


   <!-- <td>{{ auteur.sexe }}</td>-->
	
	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary" href="{{ path('auteur_edit', {'id': auteur.id}) }}">Modifier</a>

		{{ include('auteur/_delete_form.html.twig') }}
	{% endif %}

</div>
{% endblock %}
